<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" prefHeight="495.0" prefWidth="537.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imc_calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="weight" prefHeight="17.0" prefWidth="94.0" text="enter weight" />
    <TextField fx:id="weight1" />
    <Label fx:id="height" prefHeight="17.0" prefWidth="168.0" text="enter Height ( float (a.bb))" />
    <TextField fx:id="height1" />

    <Button fx:id="myButton" onAction="#submit" prefHeight="25.0" prefWidth="92.0" text="Calculate" />
    <Circle fx:id="circle" fill="WHITE" radius="50.0" stroke="TRANSPARENT" strokeType="INSIDE" />



    <Label fx:id="IMCLABEL" prefHeight="17.0" prefWidth="257.0" />
</VBox>
